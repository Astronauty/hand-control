<mujoco model="planar_two_finger_manipulator">
    <compiler angle="radian"/>
    <option timestep="0.001" gravity="0 0 -9.81"/>

    <visual>
        <rgba haze="0.15 0.25 0.35 1"/>
        <quality shadowsize="8192"/>
    </visual> 

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0.1 0.1 0.2" width="512" height="3072"/>
            <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>


    <worldbody>
        <camera name="cam0" pos="0.0 0.0 2.0" xyaxes="1 0 0 0 1 0"/>
        <light pos="0 0 1"/>

        <!-- Right Hand Index Finger -->
        <body name="base" pos="0 0 0">
            <geom type="box" size="0.1 0.05 0.01" rgba="0.5 0.3 0.3 0.5"/>

            <body name="right_index_proximal_link" pos="0.1 0 0">
                <geom type="capsule" size="0.02 0.05" fromto="0 0 0 0.1 0 0" mass="0.1" group="1" conaffinity="0"/>
                <joint name="right_index_MCP_joint" type="hinge" axis="0 0 1"/>

                <body name="right_index_medial_link" pos="0.1 0 0">
                    <joint name="right_index_PIP_joint" type="hinge" axis="0 0 1"/>
                    <geom type="capsule" size="0.02 0.05" fromto="0 0 0 0.1 0 0" mass="0.1" group="1" conaffinity="0"/>

                    <body name="right_index_distal_link" pos="0.1 0 0">
                        <joint name="right_index_DIP_joint" type="hinge" axis="0 0 1"/>
                        <geom type="capsule" size="0.02 0.05" fromto="0 0 0 0.1 0 0" mass="0.1" group="1" conaffinity="0"/>
                            
                    </body>
                </body>

            </body>

        </body>


        <body name="mocap" mocap="true" pos="0 -0.1 0">
            <geom type="sphere" size="0.005" rgba="0 1 0 1.0"/>
        </body>

    </worldbody>

    <actuator>
        <position joint="right_index_MCP_joint" kp="1" dampratio="1" ctrllimited="false"/> 
        <position joint="right_index_PIP_joint" kp="1" dampratio="1"/>
        <position joint="right_index_DIP_joint" kp="1" dampratio="1"/>
    </actuator>
</mujoco>