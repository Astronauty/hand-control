<mujoco model="planar_two_finger_manipulator">
    <compiler angle="radian"/>
    <option timestep="0.001" gravity="0.0 -9.81 0.0"/>

    <visual>
        <rgba haze="0.15 0.25 0.35 1"/>
        <quality shadowsize="8192"/>
    </visual> 

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0.1 0.1 0.2" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
            markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.0"/>
    </asset>


    <worldbody>
        <!-- Scene Visualization -->
        <camera name="cam0" pos="0.0 0.0 2.0" xyaxes="1 0 0 0 1 0"/>
        <light pos="-1 1 0"/>

        <geom type="plane" material="groundplane" pos="0 -0.8 0" quat="0.7071068 -0.7071068 0 0" size="1 1 1" rgba="1 1 1 1" contype="1" conaffinity="1"/>
        

        <!-- Right Hand Index Finger -->
        <body name="base" pos="0 0 0">
            <geom type="box" size="0.1 0.05 0.01" rgba="0.5 0.3 0.3 0.5"/>
            <joint name="Th_base_x" type="slide" axis="1 0 0" limited="true" range="-5.0 5.0" damping="1"/>
            <joint name="Th_base_y" type="slide" axis="0 1 0" limited="true" range="-1.0 1.0" damping="1"/>


            <body name="right_index_proximal_link" pos="0.1 0 0">
                <geom type="capsule" size="0.02" fromto="0 0 0 0.1 0 0" mass="0.1" group="1" conaffinity="0"/>
                <joint name="right_index_MCP_joint" type="hinge" axis="0 0 1"/>

                <body name="right_index_medial_link" pos="0.1 0 0">
                    <joint name="right_index_PIP_joint" type="hinge" axis="0 0 1"/>
                    <geom type="capsule" size="0.02" fromto="0 0 0 0.1 0 0" mass="0.1" group="1" conaffinity="0"/>

                    <body name="right_index_distal_link" pos="0.1 0 0">
                        <joint name="right_index_DIP_joint" type="hinge" axis="0 0 1"/>
                        <geom type="capsule" size="0.02" fromto="0 0 0 0.1 0 0" mass="0.1" group="1" conaffinity="0"/>
                            
                    </body>
                </body>

            </body>

            <!-- Right Hand Thumb Finger -->

            <body name="right_thumb_proximal_link" pos="-0.1 0 0">
                <geom type="capsule" size="0.02" fromto="0 0 0 -0.1 0 0" mass="0.1" group="1" conaffinity="0"/>
                <joint name="right_thumb_MCP_joint" type="hinge" axis="0 0 1"/>

                <body name="right_thumb_medial_link" pos="-0.1 0 0">
                    <joint name="right_thumb_PIP_joint" type="hinge" axis="0 0 1"/>
                    <geom type="capsule" size="0.02" fromto="0 0 0 -0.1 0 0" mass="0.1" group="1" conaffinity="0"/>

                    <body name="right_thumb_distal_link" pos="-0.1 0 0">
                        <joint name="right_thumb_DIP_joint" type="hinge" axis="0 0 1"/>
                        <geom type="capsule" size="0.02" fromto="0 0 0 -0.1 0 0" mass="0.1" group="1" conaffinity="0"/>
                            
                    </body>
                </body>

            </body>


        </body>



        <!-- <body name="Th_base" pos="0 0 0">
            <geom type="box" size="0.1 0.05 0.01" rgba="0.5 0.3 0.3 0.5"/>

            
        </body> -->


        <body name="obj1" pos="0.0 -0.4 0.0">
            <joint name="free_obj1_joint" type="free"/>
            <geom type="box" size="0.05 0.05 0.05" rgba="0.3 0.3 0.5 1.0" mass="0.2" friction="1 0.1 0.1" contype="1" conaffinity="1"/>
        </body>
        <!-- <body name="mocap" mocap="true" pos="0 -0.1 0">
            <geom type="sphere" size="0.005" rgba="0 1 0 1.0"/>
        </body> -->

    </worldbody>

    <actuator>
        <position name="Th_base_x_act" joint="Th_base_x" kp="100" dampratio="1" ctrllimited="false"/>
        <position name="Th_base_y_act" joint="Th_base_y" kp="100" dampratio="1" ctrllimited="false"/>

        <position name="right_index_MCP_joint" joint="right_index_MCP_joint" kp="2" dampratio="1" ctrllimited="false"/> 
        <position name="right_index_PIP_joint" joint="right_index_PIP_joint" kp="2" dampratio="1" ctrllimited="false"/>
        <position name="right_index_DIP_joint"joint="right_index_DIP_joint" kp="2" dampratio="1" ctrllimited="false"/>

        <position joint="right_thumb_MCP_joint" kp="1" dampratio="1" ctrllimited="false"/> 
        <position joint="right_thumb_PIP_joint" kp="1" dampratio="1" ctrllimited="false"/>
        <position joint="right_thumb_DIP_joint" kp="1" dampratio="1" ctrllimited="false"/>
    </actuator>
</mujoco>